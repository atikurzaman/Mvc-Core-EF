@model Application.Web.Areas.Admin.Models.BrandViewModel
@using Application.Web.Common

@{
    Layout = null;
}

<form asp-action="AddEditBrand" role="form">
    @await Html.PartialAsync("_ModalHeader", new ModalHeader { Heading = String.Format("{0} Brand", @Model.Id == 0 ? "Add" : "Edit") })
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="modal-body form-horizontal">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>            
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>            
        </div>
        <div class="form-group">
            <label asp-for="IsActive"></label>
            <select asp-for="IsActive" asp-items="@Model.IsActiveSelectList" class="form-control"></select>
        </div>
    </div>
    @await Html.PartialAsync("_ModalFooter", new ModalFooter { })
</form>
<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.2.0.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>

