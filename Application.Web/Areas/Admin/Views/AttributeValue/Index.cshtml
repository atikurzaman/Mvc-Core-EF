@model IEnumerable<Application.Web.Areas.Admin.Models.AttributeValueViewModel>
@using Application.Web.Common

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_GentelellaAdmin.cshtml";
}

<div class="top-content-buffer"></div>
<div class="table-responsive">
    <div class="panel-heading panel-head respo">Attribute Values</div>
    <div class="panel-body">
        <div class="btn-group">
            <a id="createEditAttributeValueModal" data-toggle="modal" asp-action="AddEditAttributeValue" asp-route-attributeId="@ViewData["AttributeId"]" data-target="#modal-action-attribute-value" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>  Add Attribute Value
            </a>
        </div>
        <div class="top-buffer"></div>
        <table class="table table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>                    
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>                    
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>                        
                        <td>
                            @Html.DisplayFor(modelItem => item.IsActive)
                        </td>                       
                        <td>
                            <a id="editAttributeValueModal" data-toggle="modal" asp-action="AddEditAttributeValue" asp-route-id="@item.Id" data-target="#modal-action-attribute-value"
                               class="btn btn-info">
                                <i class="glyphicon glyphicon-pencil"></i>  Edit
                            </a>
                            <a id="deleteAttributeValueModal" data-toggle="modal" asp-action="DeleteAttributeValue" asp-route-id="@item.Id" data-target="#modal-action-attribute-value" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>  Delete
                            </a>
                            <a id="addEditAttributeValueModal" asp-controller="Attribute" asp-action="Index" asp-route-id="@item.Id" class="btn btn-primary">
                                <i class="glyphicon glyphicon-menu-up"></i>  Attribute
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@await Html.PartialAsync("_Modal", new BootstrapModel { ID = "modal-action-attribute-value", AreaLabeledId = "modal-action-attribute-value-label", Size = ModalSize.Medium })
@section scripts
    {
    <script src="~/js/AdminJs/attribute-value-index.js" asp-append-version="true"></script>
}